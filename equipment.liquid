---
layout: default.html
title: Equipment
---
<main>
  <div class="main-container">
    <h1>Equipment I Use</h1>
    <div class="card-container">
        {%- for item in collections.equipment -%}
        <div class="card">
          <div class="card-heading">
            <h2>{{item.data.name}}</h2>
          </div>
          <div class="card-body">
          <div class="image-container width-50 aspect-ratio-1-1">
            <img src="{{item.data.logo}}" alt="brand logo">
          </div>
          </div>
          <div class="card-footer">
            <a class="espresso" href="{{item.data.website}}">Website</a>
          </div>
        </div>
        {%- endfor -%}
    </div>
  </div>
</main>