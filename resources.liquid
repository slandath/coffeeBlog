---
layout: default.html
title: Resources
---
<main>
  <div class="main-container">
    <h1>Great Resources</h1>
    <div class="card-container">
        {%- for resource in collections.resources -%}
        <div class="card">
          <div class="card-heading">
            <h2>{{resource.data.name}}</h2>
          </div>
          <div class="card-body">
          <div class="image-container width-100 aspect-ratio-1-1">
            <img src="{{resource.data.logo}}" alt="brand logo">
          </div>
          </div>
          <div class="card-footer">
            <a class="espresso" href="{{resource.data.website}}">Website</a>
          </div>
        </div>
        {%- endfor -%}
    </div>
  </div>
</main>